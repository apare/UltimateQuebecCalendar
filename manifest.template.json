{
  "name": "Ultimate Quebec Calendar",
  "version": "3.4",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "identity",
    "webNavigation",
    "https://www.googleapis.com/*",
    "https://www.ultimatequebec.ca/*"
  ],
  "options_ui": {
    "page": "assets/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.ultimatequebec.ca/*"],
      "js": ["dist/content_script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "page_action": {
    "default_title": "Ultimate Quebec Calendar",
    "default_popup": "assets/options.html"
  },
  "manifest_version": 2,
  "oauth2": {
    "client_id": "INSERT_CLIENT_ID",
    "scopes": ["https://www.googleapis.com/auth/calendar"]
  }
}
